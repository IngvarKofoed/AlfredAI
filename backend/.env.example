# Backend port number
PORT=3000

# Node environment
NODE_ENV=development

# Anthropic API key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI API key
GOOGLE_AI_API_KEY=your_google_api_key_here

# Task Configuration
# Options: "scripted" or "butler"
# Default: "butler"
TASK_TYPE=butler

# The working directory for the backend
WORKING_DIRECTORY=

# Memory System Configuration
# Enable/disable the memory system (default: true)
MEMORY_ENABLED=true

# Memory storage directory (default: memory-bank)
MEMORY_DIR=memory-bank

# Memory store type: file, vector, or hybrid (default: file)
MEMORY_STORE_TYPE=file

# Memory file format: json or yaml (default: json)
MEMORY_FORMAT=json

# Enable memory backup files (default: true)
MEMORY_BACKUP=true

# Maximum number of memories to keep (default: 10000)
MEMORY_MAX_COUNT=10000

# Days to keep short-term memories (default: 7)
MEMORY_SHORT_TERM_DAYS=7

# Days to keep long-term memories (default: 365)
MEMORY_LONG_TERM_DAYS=365